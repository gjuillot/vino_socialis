<div class="container">
<div clas="row">
  <div class="span8">
  	<h3>Random wine estates</h3>
	<ul>
	  <%= render @estates %>
	</ul>
  </div>
  <div class="span3">
  	<%= form_tag search_estates_path, method: 'get' do %>
  	  <%= text_field_tag :q, @searched %>
  	  <%= submit_tag "Search estate", class: "btn btn-large btn-primary" %>
  	<% end %>
	<% if can? :create, Estate %>
	  <%= link_to 'Suggest a new Estate', new_estate_path %>
    <% end %>
  </div>
</div>
</div>
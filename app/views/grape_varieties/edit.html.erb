
<%= form_for(@grape_variety, html: { class:'form-horizontal'}) do |f| %>

  <div class="row">
    <div class="span6 offset3">

      <div class="control-group">
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name %>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
           <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    
    </div>
  </div>
<% end %>

<% set_meta_tags :title => t("menu.discover.grape_varieties"),
                 :description => t('home.discover.grape_varieties.title', count: @grape_varieties.count) + ' - ' + @grape_varieties.take(5).map(&:name).join(', ') + '...' %>

<div class="white-opacity rounded">

  <% if @for_replacement %>
    <h1>Remplacement de <%= @for_replacement.name %></h1>
  <% else %>
    <h1><%= t('menu.discover.grape_varieties') %></h1>
  <% end %>
  
  <% per_column = (@grape_varieties.size/3.0).ceil %>
  <% first = @grape_varieties.take(per_column) %>
  <% second = (@grape_varieties-first).take(per_column) %>
  <% third = (@grape_varieties-first-second).take(per_column) %>
  <div class="row-fluid white-opacity">
    <div class="span4">
      <ul>
        <%= render first %>
      </ul>
    </div>
    <div class="span4">
      <ul>
        <%= render second %>
      </ul>
    </div>
    <div class="span4">
      <ul>
        <%= render third %>
      </ul>
    </div>
  </div>

</div>

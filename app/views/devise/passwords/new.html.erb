<% provide(:title, t('helpers.label.user.forgot_password')) %>

<div class="white-opacity rounded">
  
  <h1><%= t('helpers.label.user.forgot_password') %></h1>
  
  <div class="row">
    <div class="span6 offset3">
  	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f| %>
  	  <%= devise_error_messages! %>
  	
      <div class="control-group">
        <%= f.label :email, :class => 'control-label' %>
        <div class="controls">
         <%= f.email_field :email %>
        </div>
      </div>
      
      <div class="control-group">
        <div class="controls">
          <%= f.submit t('devise.mailer.reset_password_instructions.subject'), class: "btn btn-large btn-primary" %>
        </div>
      </div>
  	
  	<% end %>
    </div>
  </div>
  
</div>

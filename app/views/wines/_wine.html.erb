<% with_estate ||= false %>
<li>
  <% if with_estate %>
    <%= link_to wine.estate.name, wine.estate %> -
  <% end %>
  <%= link_to wine.name, wine %> - <i><%= link_to wine.area.name, wine.area %></i>
	
  <% if can? :manage, wine %>
    - <%= link_to_edit(edit_wine_path(wine)) %> <%= link_to_destroy wine %>
  <% end %>
</li>
<% provide(:title, @region.name) %>

<p id="notice"><%= notice %></p>

<h2><%= link_to t("country.countries"), countries_path %> &gt; <%= link_to @region.country.name, @region.country %> &gt; <%= @region.name %></h2>

<% if @areas.any? %>
  <ul>
  	<%= render @areas %>
  </ul>
<% else %>
  <%= t("region.no_areas") %>
<% end %>
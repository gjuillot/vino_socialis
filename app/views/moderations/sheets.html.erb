
<% if @grape_varieties.any? %>
  <h2><%= t('grape_variety.grape_varieties') %></h2>
  <table class="table table-condensed table-striped">
    <theader>
      <tr>
        <th>Nom</th>
        <th>Vins correspondants</th>
        <th>Edition</th>
        <th>Suppression</th>
        <th>Validation</th>
        <th>Remplacement</th>
      </tr>
    </theader>
    <tbody>
      <%= render :collection => @grape_varieties, :partial => 'grape_variety' %>
    </tbody>
  </table>
  
  <br />
<% end %>

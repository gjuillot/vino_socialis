
<table>
  <tr>
    <%= @wine_rack.compartment_letter(0, total_column) %>
  </tr>
  <% (0..(rows - 1)).each do |row| %>
    <% shorten_row = (rows - row + total_column).even? %> 
    <tr>
      <td>
        <%= row %>.&nbsp;
      </td>
      <% (0..(columns - (shorten_row ? 2 : 1))).each do |column| %>
        <td>
          <% position = compartment[row][column] %>
          <%= render :partial => 'wine_racks/place/img', :locals => {:position => position, :move => (shorten_row ? '7' : '0'), :total_row => total_row, :total_column => total_column, :row => row, :column => column, :quantity => quantity} %>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
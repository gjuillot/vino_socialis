<% provide(:title, @wine_rack.name) %>

<h1><%= @wine_rack.name %></h1>

<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span3">

<table>
  <tr align="middle">
    <td>
      &nbsp;
    </td>
    <% (0..(@wine_rack.columns - 1)).each do |column| %>
      <td>
      	<%= column %>
      </td>
    <% end %>
  </tr>
  <% (0..(@wine_rack.rows - 1)).each do |row| %>
    <tr align="middle">
      <td>
        <%= row %>
      </td>
      <% (0..(@wine_rack.columns - 1)).each do |column| %>
        <td>
          <% position = @positions[row][column] %>
          <% if position %>
            <%= link_to wine_color_image(position.bottle.wine, false), bottle_path(position.bottle) %>
          <% else %>
            <%= no_wine_color_image %>
          <% end %> 
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

  </div>

  <div class="span9">
    <table class="table table-condensed table-striped">
      <thead>
      	<tr>
      	  <th><%= t 'wine_rack.row' %></th>
      	  <th><%= t 'wine_rack.column' %></th>
      	  <th><%= t 'wine_rack.bottle' %></th>
      	</tr>
      </thead>
      <tbody>
      <% (0..(@wine_rack.rows - 1)).each do |row| %>
        <% (0..(@wine_rack.columns - 1)).each do |column| %>
          <% position = @positions[row][column] %>
          <% if position %>
            <tr>
          	  <td><%= row %></td>
          	  <td><%= column %></td>
          	  <td><%= bottle_name position.bottle, html: true %></td>
              <td>
              	<div class="btn-group">
                  <a class="btn btn-mini dropdown-toggle" data-toggle="dropdown" href="#">
                  	Action
                  	<span class="caret"></span>
                  </a>
                  <ul class="dropdown-menu">
                    <%= link_to_show bottle_path(position.bottle) %>
                    <%= link_to_consume consume_bottle_path(position.bottle, wine_rack_position_id: position.id) %>
                    <%= link_to_edit edit_bottle_path(position.bottle) %>
                  </ul>
              	</div>
              </td>
            </tr>
          <% end %>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

</div>
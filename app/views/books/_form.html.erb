<%= form_for(@book, html: { class:'form-horizontal'}) do |f| %>
  <div class="row-fluid">
    <div class="span6">
      <div class="control-group">
        <%= f.label :title, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :title %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :authors, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :authors %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :category, :class => 'control-label' %>
        <div class="controls">
          <% categories = %w[general tasting pairing france world guide other].map {|l| [t(l, scope: 'book.category'), l] }%>
          <%= select_tag "book[category]", options_for_select(categories) %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :description, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, :rows => 5 %>
        </div>
      </div>
    </div>
    
    <div class="span6">
      <div class="control-group">
        <%= f.label :editor, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :editor %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :isbn, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :isbn %>
        </div>
      </div>
      
      <div class="control-group">
        <%= f.label :pages, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :pages %>
        </div>
      </div>
      
      <% if can? :manage, @book %>
        <div class="control-group">
          <%= f.label :amazon, :class => 'control-label' %>
          <div class="controls">
            <%= f.text_field :amazon %>
          </div>
        </div>
      <% end %>
      
      <div class="control-group">
        <div class="controls">
          <%= f.submit class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

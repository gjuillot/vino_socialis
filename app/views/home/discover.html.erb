<% description = t('home.discover.areas.title_areas', count: Area.count) %>
<% description += ' - ' + t('home.discover.grape_varieties.title', count: GrapeVariety.count) %>
<% description += ' - ' + t('temperature.title') %>
<% description += ' - ' + t('home.discover.glossary.title', count: Glossary.count) %>
<% description += ' - ' + t('vintages.vintages') %>
<% description += ' - ' + t('home.discover.recommanded.title') %>
<% description += ' - ' + t('home.discover.pairings.title') %>

<% set_meta_tags :title => t("home.index.carousel.t2"),
                 :description => description %>

<div class="row-fluid">
  <div class="span4">
    <div class="alert alert-no-close alert-info" style="height: 220px; position: relative">
      <h3><%= t('home.discover.areas.title_countries', count: Country.count) %></h3>
      <h3><%= t('home.discover.areas.title_areas', count: Area.count) %></h3>
      <%= raw @areas.map {|a| link_to (a.region.country.name + ' - ' + a.name).truncate(50), a}.join('<br />') %><br />
      <%= link_to t('home.discover.more'), countries_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
  <div class="span4">
    <div class="alert alert-no-close alert-success" style="height: 220px; position: relative">
      <h3><%= t('home.discover.grape_varieties.title', count: GrapeVariety.count) %></h3>
      <%= raw @grape_varieties.map {|a| link_to a.name.truncate(36), a}.join('<br />') %><br />
      <%= link_to t('home.discover.more'), grape_varieties_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
  <div class="span4">
    <div class="alert alert-no-close alert-info" style="height: 220px; position: relative">
      <h3><%= t('temperature.title') %></h3>
      <%= t('temperature.introduction.introduction') %>
      <ul>
        <li><%= t('temperature.introduction.cold') %></li>
        <li><%= t('temperature.introduction.hot') %></li>
      </ul>
      <%= link_to t('home.discover.more'), temperature_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
</div>
<div class="row-fluid">
  <div class="span6">
    <div class="alert alert-no-close alert-success" style="height: 220px; text-align: justify; position: relative">
      <h3><%= t('home.discover.glossary.title', count: Glossary.count) %></h3>
      <% @definitions.each do |definition| %>
        <em><%= definition.word.truncate(50) %></em><br /><%= definition.definition.truncate(175) %><br /><br />
      <% end %>
      <%= link_to t('home.discover.more'), glossaries_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
  <div class="span6">
    <div class="alert alert-no-close alert-info" style="height: 220px; text-align: justify; position: relative">
      <h3><%= t('vintages.vintages') %></h3>
      <% @vintages.each do |vintage| %>
        <%= "#{vintage.area}, #{vintage.year}" %> - <span data-score="<%= vintage.note %>" class="vintage_note"></span><br />
      <% end %>
      <%= link_to t('home.discover.more'), vintages_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span4">
    <div class="alert alert-no-close alert-success" style="height: 250px; text-align: justify;position: relative">
      <h3><%= t('home.discover.recommanded.title') %></h3>
      <%= t('home.discover.recommanded.description') %><br />
      <%= image_tag 'why/recommandation.jpg', style: "position: relative; top: 7px;" %><br />
      <%= link_to t("menu.profile.sign_up"), new_user_registration_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
  <div class="span4">
    <div class="alert alert-no-close alert-info" style="height: 250px; text-align: justify;position: relative">
      <h3><%= t('home.discover.pairings.title') %></h3>
      <%= t('home.discover.pairings.description') %><br />
      <%= image_tag 'why/pairing.jpg', style: "position: relative; top: 7px;" %><br />
      <%= link_to t("menu.profile.sign_up"), new_user_registration_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
  <div class="span4">
    <div class="alert alert-no-close alert-success" style="height: 250px; text-align: justify;position: relative">
      <h3><%= t('home.discover.community.title') %></h3>
      <ul>
        <li><%= t('home.discover.community.users', count: User.count) %></li>
        <li><%= t('home.discover.community.wines', count: Wine.validated.count) %></li>
        <li><%= t('home.discover.community.tastings', count: Tasting.count) %></li>
      </ul>
      <%= link_to t("menu.profile.sign_up"), new_user_registration_path, class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
</div>

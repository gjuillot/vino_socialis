<% set_meta_tags :title => t("home.track.summary.title"),
                 :description => ('1'..'6').map {|i| t('home.track.summary.p' + i + '.title')}.join(' - ') %>

<div class="row-fluid">
  <div class="span12 alert alert-success alert-no-close">
    <h1><%= t('home.track.summary.title')%></h1>
  </div>
</div>


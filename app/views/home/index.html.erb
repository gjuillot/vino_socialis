<% set_meta_tags :title => t("home.index.title"),
                 :description => t("home.index.description") %>

<div class="row-fluid">
  <div class="span6">
    <%= image_tag 'home/vinosus.jpg' %>
    <br />
    <div class="alert alert-no-close alert-success" style="line-height: 1.30; position: relative; height: 200px">
      <h3><%= t('home.index.for_all') %></h3><br />
      <p><%= raw t('home.index.carousel.p1') %></p>
      <%= link_to t('home.discover.more'), url_for(controller: 'home', action: 'why'), class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
   </div> 
   
  <div class="span6">
    <%= image_tag 'home/discover.jpg' %>
    <br />
    <div class="alert alert-no-close alert-success" style="line-height: 1.30; position: relative; height: 200px">
      <h3><%= t('menu.discover.title') %></h3>
      <p>
        <%= raw t('home.index.discover.p1') %><br />
        <%= raw t('home.index.discover.p2') %>
      </p>
      <p><%= raw t('home.index.carousel.p2') %></p>
      <%= link_to t('home.discover.more'), url_for(controller: 'home', action: 'discover'), class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <%= image_tag 'home/track.jpg' %>
    <br />
    <div class="alert alert-no-close alert-success" style="line-height: 1.30; position: relative; height: 200px">
      <h3><%= t('menu.track.title') %></h3>
      <p>
        <%= raw t('home.index.track.p1') %>
      </p>
      <p><%= raw t('home.index.carousel.p3') %></p>
      <%= link_to t('home.discover.more'), url_for(controller: 'home', action: 'track'), class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>

  <div class="span6">
    <%= image_tag 'home/share.jpg' %>
    <br />
    <div class="alert alert-no-close alert-success" style="line-height: 1.30; position: relative; height: 200px">
      <p>
        <h3><%= t('menu.share.title') %></h3>
        <%= raw t('home.index.share.p2') %><br />
        <%= raw t('home.index.share.p3') %>
      </p>
      <p><%= raw t('home.index.carousel.p4') %></p>
      <%= link_to t('home.discover.more'), url_for(controller: 'home', action: 'share'), class: 'btn btn-primary', style: 'position: absolute; bottom: 15px; right: 15px' %>
    </div>
  </div>
</div>


<hr />

<div class="row">
  <div class="span6">
    <div class="alert alert-no-close alert-success">
      <h3><%= t('home.index.discover.l3', :c => wine_count_validated) %></h3>
      <table class="table">
        <% @wines.each do |wine| %>
          <tr>
            <td>
              <% if wine.labels.validated.any? %>
                <%= image_tag wine.labels.validated.first.image_url(:mini).to_s, style: "border: 1px solid;" %>
              <% end %>
            </td>
            <td>
              <%= wine_name(wine, estate: true, html: true) %><br />
              <%= full_area_name wine.area, html: true %><br />
              <%= wine_icon wine, text: true %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="span6">
    <div class="alert alert-no-close alert-success">
      <h3><%= t('home.index.share.l2', :c => Tasting.all.count) %></h3>
      <table class="table">
        <% @tastings.each do |tasting| %>
          <tr>
            <td>
              <% if tasting.wine.labels.validated.any? %>
                <%= image_tag tasting.wine.labels.validated.first.image_url(:mini).to_s, style: "border: 1px solid;" %>
              <% end %>
            </td>
            <td>
              <%= wine_name(tasting.wine, estate: true, html: true) %><br />
              <%= full_area_name tasting.wine.area, html: true %><br />
              <%= wine_icon tasting.wine, text: true %><br />
              <%= formated_vintage tasting.vintage, false %><br />
              <span class="star" data-score="<%= tasting.note %>"></span> par <%= tasting.user.name %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
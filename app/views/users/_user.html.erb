<tr>
  <td>
    <%= link_to user.name, user %>
  </td>
  
  <td>
    <%= link_to_message user %>
  </td>
	
  <% if can? :update, user %>
    <td>
      <%= link_to_edit(edit_user_path(user)) %>
    </td>
  <% end %>
	
  <% if can? :destroy, user %>
    <td>
      <%= link_to_destroy user %>
    </td>
  <% end %>
</tr>

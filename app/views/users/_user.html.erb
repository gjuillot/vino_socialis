<tr>
  <td>
    <%= link_to user.name, user %>
  </td>
  
  <td>
    <span class="star" data-score="<%= current_user.sim_euclide_bottles(user) %>"></span>
  </td>
  
  <td>
    <%= link_to_message user %>
  </td>
	
  <% if can? :update, user %>
    <td>
      <%= link_to_edit(edit_user_path(user)) %>
    </td>
  <% end %>
  
  <% if can? :destroy, user %>
    <td>
      <%= link_to_destroy user %>
    </td>
  <% end %>
  
  <% if can? :become, user %>
    <td>
      <%= content_tag(:a, content_tag(:i, "", class: "icon-user") + ' Become', :href => become_user_path(user)) %>
    </td>
  <% end %>
</tr>

<div class="span6 offset3 white-opacity rounded">
  
  <h1><%= t('conversation.new') %></h1>
  
  <%= form_tag({:action => 'create'}, :class => 'form-horizontal') do %>
  
  <%= hidden_field_tag 'admin_tag', @admin_tag %>
  
    <div class="control-group">
      <%= label_tag 'users_list', t('conversation.to'), class: 'control-label' %>
      <div class="controls">
        <div class="input-prepend">
          <input id="users_list" name="users_list" type="text" size="30"  data-path="<%= search_users_path() %>" data-pre="<%= @users.map{|u| {name: u.name}}.to_json %>" data-hint="<%= t('helpers.token_input.hint') %>" data-searching="<%= t('helpers.token_input.searching') %>" />
        </div>
      </div>
    </div>
  
    <div class="control-group">
      <%= label_tag 'subject', t('conversation.subject'), class: 'control-label' %>
      <div class="controls">
      	<% if @admin_tag.blank? %>
      	  <%= text_field_tag 'subject' %>
        <% else %>
      	  <div class="input-prepend">
            <span class="add-on"><%= @admin_tag %></span><%= text_field_tag 'subject' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <% unless @bug_page.blank? %>
    <div class="control-group">
      <%= label_tag 'page', t('conversation.page'), class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'page', @bug_page, :class => 'uneditable-input' %>
      </div>
    </div>
    <% end %>
    
    <% unless user_signed_in? %>
    <div class="control-group">
      <%= label_tag 'mail', t('conversation.mail'), class: 'control-label' %>
      <div class="controls">
        <%= text_field_tag 'mail' %>
      </div>
    </div>
    <% end %>
  
    <div class="control-group">
      <%= label_tag 'body', t('conversation.body'), class: 'control-label' %>
      <div class="controls">
        <%= text_area_tag 'body'%>
      </div>
    </div>
    
    <div class="control-group">
      <div class="controls">
        <%= submit_tag t('conversation.send'), :class => "btn btn-primary" %>
      </div>
    </div>
  
  <% end %>

</div>

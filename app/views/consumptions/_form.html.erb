<h2><%= bottle_name @bottle %></h2>

<%= form_for(@consumption, html: { class:'form-horizontal'}) do |f| %>

  <div class="row">
    <div class="span6">

      <%= f.hidden_field :bottle_id, value: @bottle.id %>

	  <div class="control-group">
        <%= f.label :date, :class => 'control-label' %>
	    <div class="controls">
          <%= f.date_select :date, {:order => [:day, :month, :year]}, {class: "date"} %>
	    </div>
	  </div>
	
	  <div class="control-group">
        <%= f.label :quantity, :class => 'control-label' %>
	    <div class="controls">
          <%= f.number_field :quantity, :value => '1', :disabled => @quantity_field_disabled %>
	    </div>
	  </div>
	
	  <div class="control-group">
        <% reasons = ['drinked', 'group', 'family_friend', 'gift', 'corked'].map {|c| [t(c, scope: 'consumptions.reasons'), c]}%>
        <%= f.label :reasons, :class => 'control-label' %>
	    <div class="controls">
          <%= select_tag 'consumption[reasons]', options_for_select(reasons) %>
	    </div>
	  </div>
	
	</div>
    <div class="span6">
	  <div class="control-group">
        <%= f.label :comments %>
        <%= f.text_area :comments, rows: 4, class: "span4" %>
      </div>
      
	  <div class="control-group">
	    <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="span6">
    <div class="control-group">
      <%= f.label :vintage, :class => 'control-label' %>
      <div class="controls">
        <%= select_vintage f, @vintage %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :date, :class => 'control-label' %>
      <div class="controls">
        <%= f.date_select :date, {:order => [:day, :month, :year], :default => @date}, {class: "date"} %>
      </div>
    </div>

    <div class="control-group">
      <%= f.label :note, :class => 'control-label' %>
      <div class="controls">
        <%= select_tag 'tasting[note]', options_for_select((1..5).map {|i| ["#{i}/5", i]}, :selected => @tasting.note), :prompt => '-' %>
      </div>
    </div>
  </div>

  <div class="span6">
    <div class="control-group">
      <div class="help-block">
        <%= t('helpers.label.pairing.help') %>
      </div>
    </div>

    <div class="control-group">
      <label for="pairing_dish" class="control-label"><%= t('helpers.label.pairing.dish') %>*</label>
      <div class="controls">
        <input id="pairing_dish" name="pairing[dish]" size="30" type="text" value="<%= (@pairing ? @pairing.dish : '') %>" data-provide="typeahead" data-items="10" data-source='<%= (raw dishes_array).gsub("'", "\'") %>' autocomplete='off' />
      </div>
    </div>

    <div class="control-group">
      <label for="pairing_note" class="control-label"><%= t('helpers.label.pairing.note') %>*</label>
      <div class="controls">
        <%= select_tag 'pairing[note]', options_for_select((1..5).map {|i| ["#{i}/5", i]}, :selected => (@pairing ? @pairing.note : '')), :prompt => '-' %>
      </div>
    </div>
  </div>
</div>

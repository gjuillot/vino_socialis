  <h2><%= wine_name(@wine, estate: true, area: true) %></h2>

  <%= form_for(@tasting, html: { class:'form-horizontal'}) do |f| %>
    <ul class="nav nav-tabs" id="myTab">
      <li class="active"><a href="#basic" data-toggle="tab"><%= t('tasting.tab.basic') %></a></li>
      <li><a href="#comments" data-toggle="tab"><%= t('tasting.tab.comments') %>*</a></li>
      <li><a href="#eye" data-toggle="tab"><%= t('tasting.tab.eye') %>*</a></li>
      <li><a href="#nose" data-toggle="tab"><%= t('tasting.tab.nose') %>*</a></li>
      <li><a href="#mouth" data-toggle="tab"><%= t('tasting.tab.mouth') %>*</a></li>
      <li class="pull-right span2"><%= f.submit class: "btn btn-primary span12" %></li>
      <li class="pull-right"><a>(* <%= t('helpers.not_mandatory') %>)</a></li>
    </ul>
  
    <%= f.hidden_field :wine_id, value: @wine.id %>
    <div class="tab-content">
      <div class="tab-pane active" id="basic">
        <%= render :partial => 'form_basic', :locals => { :f => f } %>
      </div>
      <div class="tab-pane" id="comments">
        <%= render :partial => 'form_comments', :locals => { :f => f } %>
      </div>
      <div class="tab-pane" id="eye">
        <%= render :partial => 'form_eye', :locals => { :f => f } %>
      </div>
      <div class="tab-pane" id="nose">
        <%= render :partial => 'form_nose', :locals => { :f => f } %>
      </div>
      <div class="tab-pane" id="mouth">
        <%= render :partial => 'form_mouth', :locals => { :f => f } %>
      </div>
    </div>
  <% end %>
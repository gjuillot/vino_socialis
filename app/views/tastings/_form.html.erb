<div class="row">
  <div class="span6 offset3">
<%= form_for(@tasting) do |f| %>
  <% if @tasting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tasting.errors.count, "error") %> prohibited this tasting from being saved:</h2>

      <ul>
      <% @tasting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :wine %>
  <%= f.hidden_field :wine_id, value: @wine.id %>
  <%= f.text_field :wine_name, value: wine_name(@wine, estate: true, area: true), disabled: true %>

  <%= f.label :vintage %>
  <%= f.text_field :vintage %>

  <%= f.label :date %>
  <%= f.date_select :date, {:order => [:day, :month, :year]}, {class: "date"} %>

  <%= f.label :note %>
  <%= select_tag 'tasting[note]', options_for_select((1..5).map {|i| ["#{i}/5", i]}, :selected => @tasting.note) %>
  
  <label for="pairing_dish"><%= t('helpers.label.pairing.dish') %></label>
  <input id="pairing_dish" name="pairing[dish]" size="30" type="text" value="<%= (@pairing ? @pairing.dish : '') %>" data-provide="typeahead" data-items="10" data-source='<%= raw @dishes %>' />

  <label for="pairing_note"><%= t('helpers.label.pairing.note') %></label>
  <%= select_tag 'pairing[note]', options_for_select((1..5).map {|i| ["#{i}/5", i]}, :selected => (@pairing ? @pairing.note : '')) %>

  <%= f.submit class: "btn btn-large btn-primary" %>
<% end %>
  </div>
</div>
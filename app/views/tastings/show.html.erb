<% provide(:title, t("tasting.show")) %>

<p id="notice"><%= notice %></p>

<div class="white-opacity">
  <p>
    <%= wine_name @tasting.wine, estate: true, area: true, html: true %>
  </p>
  
  <p>
    <b><%= t("helpers.label.tasting.vintage") %>:</b>
    <%= formated_vintage(@tasting.vintage, short = false) %>
  </p>
  
  <p>
    <b><%= t("helpers.label.tasting.date") %>:</b>
    <%= formated_date(@tasting.date) %>
  </p>
  
  <p>
    <b><%= t("helpers.label.tasting.note") %>:</b>
    <%= @tasting.note %>/5
  </p>
  
  <p>
    <b><%= t("tasting.user") %>:</b>
    <%= @tasting.user.name %>
  </p>
  
  <% if @pairing %>
    <p>
      <b>Accord avec</b> <%= @pairing.dish %> <b>not√©</b> <%= @pairing.note %>/5
    </p>
  <% end %>
</div>

<% provide(:title, @area.name) %>

<p id="notice"><%= notice %></p>

<h2><%= link_to(t('country.countries'), countries_path) + ' > ' + full_area_name(@area) %></h2>

<table class="table table-striped table-condensed">
  <% @wines.each do |wine| %>
  	<%= wine_name wine, color: true, estate: true, html: true, links: true %>
  <% end %>
</table>